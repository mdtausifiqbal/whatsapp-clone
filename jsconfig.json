{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@api/*": [
        "api/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@data/*": [
        "data/*"
      ],
      "@features/*": [
        "features/*"
      ],
      "@service/*": [
        "service/*"
      ],
      "@utils/*": [
        "utils/*"
      ]
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "**/node_modules",
    "**/build"
  ]
}